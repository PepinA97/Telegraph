<Window x:Class="MyClient.Windows.CreateAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Create Account" Width="180" WindowStartupLocation="CenterScreen" Topmost="True" SizeToContent="Height" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <StackPanel Margin="5,5,5,5">
        <TextBlock Margin="0,0,0,5">Username</TextBlock>
        <TextBox x:Name="UsernameBox" Margin="0,0,0,5" TextChanged="UsernameBox_TextChanged"></TextBox>

        <TextBlock Padding="0,0,0,5">Password</TextBlock>
        <PasswordBox x:Name="PasswordBox" Margin="0,0,0,5" PasswordChanged="PasswordBox_PasswordChanged"></PasswordBox>

        <TextBlock Padding="0,0,0,5">Confirm Password</TextBlock>
        <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,5" PasswordChanged="ConfirmPasswordBox_PasswordChanged"></PasswordBox>

        <Button x:Name="CreateAccountButton" Click="CreateAccountButton_Click">Create Account</Button>
    </StackPanel>
</Window>
